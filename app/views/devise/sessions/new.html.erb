<div class='jumbotron'>
  <div class='container'>
    <div class='row'>

      <h2 class='sign-up'>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email,  required: false, autofocus: true, id: 'log-in-user-email' %>
          <%= f.input :password, required: false, class: 'log-in-user-password' %>
            <%= f.button :submit, "Login", class: 'btn btn-info log-in-user-button' %>
          </div>
          <% end %>
      </div>
      <div class='signup-password'><%= render "devise/shared/links" %></div>
    </div>
  </div>
</div>
