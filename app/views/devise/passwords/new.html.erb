<div class='jumbotron'>
  <div class='container'>
    <div class='row'>
      <h2 class='sign-up forgot-password'>Forgot your password?</h2>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
      <div class="form-group">
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-info user_button' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
