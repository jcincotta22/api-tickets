<div class='jumbotron'>
  <div class='container'>
    <div class='row'>
      <h2 class='sign-up'>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.error_notification %>
        <%= f.input :first_name, label: 'First Name', required: true, autofocus: true %>
        <%= f.input :last_name, label: 'Last Name', required: true%>
        <%= f.label :email %><%= f.email_field :email, required: true, autofocus: true %>
        <%= f.input :password, required: true, hint: ("(#{@minimum_password_length} characters minimum)" if @minimum_password_length) %></div>
        <%= f.input :password_confirmation, label: 'Password Confirmation', required: true %>
        <%= f.button :submit, "Sign up", class: 'btn btn-info user_button' %>
      </div>
      <%= render "devise/shared/links" %>
      <a href='/'>Back</a>

<% end %>
    </div>
  </div>
</div>
